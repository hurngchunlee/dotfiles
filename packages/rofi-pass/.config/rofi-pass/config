# rofi command. Make sure to have "$@" as last argument
_rofi () {
    if [[ "$XDG_SESSION_TYPE" == "x11" ]]; then
        # for x11 
        rofi -theme ~/.config/rofi/themes/mine -no-auto-select -i "$@"
    else
        # for wayland
        rofi -theme ~/.config/rofi/themes/mine -normal-window -no-auto-select -i "$@"
    fi
}

# fields to be used
USERNAME_field='user'

# default action
default_do='copyPass'

# send notification event
notify='true'
