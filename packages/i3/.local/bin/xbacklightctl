#!/bin/bash

function notify() {
    msgId='1000'

    dunstify="dunstify -r ${msgId} -a xbacklightctl"

    symb_fill="ðŸŒž"
    symb_open="â›…"

    bl_level=$(printf '%.0f' $(xbacklight -get))

    ${dunstify} "ðŸ”† ${bl_level}%" \
        "$(~/.local/bin/progressbar 10 ${symb_fill} ${symb_open} ${bl_level})"
}

case $1 in
inc)
    xbacklight -inc 10 && notify
    ;;
dec)
    xbacklight -dec 10 && notify
    ;;
esac
