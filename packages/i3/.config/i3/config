#bindsym XF86AudioNext exec playerctl next
#bindsym XF86AudioPrev exec playerctl previous

# i3 bar 
bar {
    status_command i3blocks
    position top
    colors {
        separator #ff661a
        background #222222
        statusline #ffffff
        focused_workspace #0088CC #0088CC #ffffff
        active_workspace #333333 #333333 #ffffff
        inactive_workspace #333333 #333333 #888888
        urgent_workspace #900000 #900000 #ffffff
    }
}

# color of windows
client.focused #0088CC #0088CC #ffffff #ff661a #0088cc
client.urgent  #900000 #900000 #ffffff #ff661a #900000

# start autocutsel to synchronize X PRIMARY and CLIPBOARD
exec --no-startup-id autocutsel -s PRIMARY -f -buttonup && autocutsel -s CLIPBOARD -f

# start picom (windows compositor)
exec --no-startup-id picom -b

# always start on the primary display only when i3 is (re)-loaded/started
#exec_always --no-startup-id ~/.local/bin/xrandrctl

# Set DPI for display
exec --no-startup-id xrandr --dpi 120

# Set wallpaper
exec_always --no-startup-id feh --randomize --bg-fill --no-xinerama ~/Pictures/wallpapers/*

# start Network-Manager applet
exec --no-startup-id nm-applet

# start owncloud client
exec --no-startup-id "sh -c 'sleep 3; owncloud'"
