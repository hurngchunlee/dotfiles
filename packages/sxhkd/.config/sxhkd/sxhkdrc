# WM
alt + {h,j,k,l}:
    i3-msg focus {left,down,up,right}

alt + shift + {h,j,k,l}:
    i3-msg move {left,down,up,right}

alt + {f,space}:
    i3-msg {fullscreen,floating} toggle

alt + {s,t,e}:
    i3-msg layout {stacking,tabbed,toggle split}

alt + q:
    i3-msg kill

alt + r:
    i3-msg mode "resize" 

alt + shift + r:
    i3-msg restart

alt + shift + b:
    i3-msg bar mode toggle

super + {v,h}:
    i3-msg split{v,h}

# app launcher
alt + Return:
    alacritty

alt + b:
    brave --disable-gpu

shift + alt + o:
    ~/.local/bin/rofi-bookmarker open

shift + alt + m:
    ~/.local/bin/rofi-bookmarker mark

alt + d:
    rofi -show-icons -show drun

alt + i:
    BLOCK_BUTTON=1 ~/.local/share/i3blocks/rofi-emoji

alt + m:
    evolution

alt + p:
    rofi-pass

# X display control with rofi-xdisplay
super + {d,p}
    BLOCK_BUTTON={1,p} ~/.local/share/i3blocks/rofi-xdisplay

# volume control with amixer and pluseaudio for volume level display
XF86Audio{RaiseVolume,LowerVolume,Mute}
    ~/.local/bin/pamixerctl {inc,dec,toggle}

XF86AudioMicMute 
    ~/.local/bin/micctl toggle

# screen brightness control with xbacklight
XF86MonBrightness{Up,Down}
    ~/.local/bin/xbacklightctl {inc,dec}

# vim:ft=sxhkdrc
